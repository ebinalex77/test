<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<main id ="site-main">
    <div class='containerstp'>
        <div class="box-nav d-flex-justify-between">
          <div class="filter">
              <a href="/in"><i class="fas fa-angle-double-left"></i> All Item</a>
          </div>
          </div>

          <div class="form-title text center">
              <h2 class="text-head"> Update Item</h2>
          </div>

<!-- form handiling -->
<form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="item" class="text-light">Item </label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="item" value="<%= user.item %>" placeholder="enter the item">
        </div>
        <div class="form-group">
            <label for="discription" class="text-light"> Discription</label>
            <input type="text" name="discription" value="<%= user.discription%>" placeholder=".............">
        </div>
        <div class="form-group">
            <label for="quatity" class="text-light"> Quatity</label>
            <input type="text" name="quatity" value="<%= user.quatity%>" placeholder="enter quatity">
        </div>
        
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="In Stock" <%= user.status == 'In Stock' ? 'checked' : '' %>>
            <label for="radio-4" class="radio-label">In Stock</label>
            </div>
            
            <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="Out Stock" <%= user.status == 'Out Stock' ? 'checked' : '' %>>
            <label for="radio-5" class="radio-label">Out Stock</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    
        
    </div>
    </form>

<!-- form handiling -->

</div>
</main>




